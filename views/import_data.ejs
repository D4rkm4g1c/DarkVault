<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DarkVault - Import Data</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #1a1a1a;
            color: #f0f0f0;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 900px;
            margin: 20px auto;
            padding: 20px;
        }
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #444;
        }
        h1, h2, h3 {
            color: #00aaff;
        }
        .nav-links a {
            color: #00aaff;
            text-decoration: none;
            margin-left: 15px;
        }
        .nav-links a:hover {
            text-decoration: underline;
        }
        .card {
            background-color: #2a2a2a;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 20px;
        }
        form {
            margin-top: 15px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
        }
        textarea {
            width: 100%;
            height: 150px;
            padding: 8px;
            background-color: #333;
            color: #fff;
            border: 1px solid #444;
            border-radius: 3px;
            font-family: monospace;
        }
        button {
            background-color: #00aaff;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 3px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0088cc;
        }
        .error-message {
            background-color: rgba(255, 0, 0, 0.1);
            border: 1px solid #aa0000;
            color: #ff6666;
            padding: 10px;
            border-radius: 3px;
            margin-bottom: 20px;
        }
        .success-message {
            background-color: rgba(0, 255, 0, 0.1);
            border: 1px solid #00aa00;
            color: #00ff00;
            padding: 10px;
            border-radius: 3px;
            margin-bottom: 20px;
        }
        .import-result {
            margin-top: 20px;
            background-color: #333;
            border-radius: 3px;
            padding: 15px;
        }
        .result-section {
            margin-bottom: 15px;
        }
        .result-section h4 {
            margin-top: 0;
            margin-bottom: 5px;
            color: #00aaff;
        }
        pre {
            background-color: #222;
            padding: 10px;
            border-radius: 3px;
            overflow-x: auto;
            max-height: 300px;
            font-family: monospace;
            margin: 0;
        }
        .actions {
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }
        .action-btn {
            background-color: #00aaff;
            color: white;
            text-decoration: none;
            border: none;
            padding: 8px 15px;
            border-radius: 3px;
            cursor: pointer;
            display: inline-block;
        }
        .action-btn:hover {
            background-color: #0088cc;
        }
        .instructions {
            margin-top: 15px;
            font-size: 0.9em;
            color: #aaa;
            line-height: 1.5;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Data Import</h1>
            <div class="nav-links">
                <a href="/dashboard">Dashboard</a>
                <a href="/settings">Settings</a>
                <a href="/products">Products</a>
                <a href="/preview">URL Preview</a>
                <a href="/import">Import Products</a>
                <a href="/contact">Contact</a>
                <% if (user.isAdmin) { %>
                    <a href="/admin">Admin Panel</a>
                <% } %>
                <a href="/logout">Logout</a>
            </div>
        </header>
        
        <% if (error) { %>
            <div class="error-message">
                <p><%= error %></p>
            </div>
        <% } %>
        
        <% if (importedData) { %>
            <div class="success-message">
                <p>Data imported successfully!</p>
            </div>
        <% } %>
        
        <div class="card">
            <h2>Import Your Data</h2>
            <p>Paste your exported data below to restore your account settings and preferences.</p>
            
            <form action="/import-data" method="POST">
                <div class="form-group">
                    <label for="data">Serialized Data:</label>
                    <textarea id="data" name="data" required placeholder="Paste your exported data here..."></textarea>
                </div>
                
                <div class="instructions">
                    <p><strong>Warning:</strong> Importing data will overwrite your current settings. Make sure you are importing data from a trusted source.</p>
                </div>
                
                <button type="submit">Import Data</button>
            </form>
            
            <div class="actions">
                <a href="/export-data" class="action-btn">Export Data</a>
            </div>
        </div>
        
        <% if (importedData) { %>
            <div class="card">
                <h2>Import Result</h2>
                <div class="import-result">
                    <div class="result-section">
                        <h4>User Information</h4>
                        <pre><%= JSON.stringify(importedData.user, null, 2) %></pre>
                    </div>
                    
                    <div class="result-section">
                        <h4>Preferences</h4>
                        <pre><%= JSON.stringify(importedData.preferences, null, 2) %></pre>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</body>
</html> 