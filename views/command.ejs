<%- include('partials/navbar') %>
<%- include('partials/header') %>

<div class="container mt-4">
  <h2>Command Console</h2>
  <div class="alert alert-warning">
    <strong>Warning:</strong> This feature allows executing system commands. Use with caution.
  </div>
  
  <div class="card mb-4">
    <div class="card-header bg-dark text-white">
      <h4>Execute Command</h4>
    </div>
    <div class="card-body">
      <form id="command-form" action="/command" method="POST">
        <div class="form-group">
          <label for="command-input">Command:</label>
          <input type="text" class="form-control" id="command-input" name="command" placeholder="Enter command...">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Execute</button>
      </form>
    </div>
  </div>
  
  <% if (output && output.length > 0) { %>
    <div class="card mb-4">
      <div class="card-header bg-secondary text-white">
        <h4>Command Output</h4>
      </div>
      <div class="card-body">
        <pre class="bg-dark text-light p-3"><%= output %></pre>
      </div>
    </div>
  <% } %>
  
  <div class="mb-3">
    <a href="/" class="btn btn-secondary">Back to Dashboard</a>
  </div>
</div>

<%- include('partials/footer') %> 