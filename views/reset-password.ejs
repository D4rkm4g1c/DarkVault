<%- include('partials/header') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h4>Reset Password</h4>
        </div>
        <div class="card-body">
          <div class="alert alert-warning">
            <strong>Vulnerability Alert:</strong> This form demonstrates several password reset vulnerabilities:
            <ul>
              <li>No token expiration time</li>
              <li>Weak password hashing (MD5)</li>
              <li>Token leakage in response headers</li>
              <li>No validation against password reuse</li>
              <li>No complexity requirements</li>
            </ul>
          </div>
          
          <% if (locals.error_msg && error_msg.length > 0) { %>
            <div class="alert alert-danger"><%= error_msg %></div>
          <% } %>
          
          <% if (locals.success_msg && success_msg.length > 0) { %>
            <div class="alert alert-success"><%= success_msg %></div>
          <% } %>
          
          <form action="/user/reset-password" method="POST">
            <input type="hidden" name="token" value="<%= token %>">
            <input type="hidden" name="username" value="<%= username %>">
            
            <div class="form-group">
              <label for="password">New Password:</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            
            <div class="form-group">
              <label for="confirm_password">Confirm New Password:</label>
              <input type="password" class="form-control" id="confirm_password" name="confirm_password" required>
            </div>
            
            <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
          </form>
          
          <div class="mt-3 text-center">
            <a href="/login">Back to Login</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Intentionally weak client-side verification
  document.querySelector('form').addEventListener('submit', function(e) {
    const password = document.getElementById('password').value;
    const confirmPassword = document.getElementById('confirm_password').value;
    
    if (password !== confirmPassword) {
      alert('Passwords do not match!');
      e.preventDefault();
    }
    
    // Leak information via console
    console.log('Reset token: ' + document.querySelector('input[name="token"]').value);
  });
</script>

<%- include('partials/footer') %> 