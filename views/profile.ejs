<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-5">
        <% if (typeof message !== 'undefined') { %>
            <div class="alert alert-success">
                <%= message %>
            </div>
        <% } %>

        <div class="row">
            <!-- User info card -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><%= profile.username %>'s Profile</h4>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <img src="https://www.gravatar.com/avatar/<%= profile.email.toLowerCase().trim() %>?s=200&d=identicon" class="rounded-circle" alt="Profile Image">
                        </div>
                        
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <strong>Username:</strong>
                                <span><%= profile.username %></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <strong>Email:</strong>
                                <span><%= profile.email %></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <strong>Role:</strong>
                                <span><%= profile.isAdmin ? 'Administrator' : 'User' %></span>
                            </li>
                            
                            <% if (profile.flag) { %>
                                <li class="list-group-item">
                                    <div class="alert alert-warning">
                                        <strong>Flag Found:</strong> <%= profile.flag %>
                                    </div>
                                </li>
                            <% } %>
                        </ul>
                        
                        <% if (user && user.id === profile.id) { %>
                            <div class="mt-3">
                                <a href="/settings" class="btn btn-primary btn-sm w-100">Edit Profile</a>
                            </div>
                        <% } %>
                    </div>
                </div>
                
                <!-- IDOR Vulnerability hint -->
                <div class="card mb-4">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Security Vulnerability</h5>
                    </div>
                    <div class="card-body">
                        <p>This page is vulnerable to <strong>Insecure Direct Object References (IDOR)</strong>.</p>
                        <p>Try accessing other user profiles by changing the ID in the URL:</p>
                        <code>/user/1</code>, <code>/user/2</code>, <code>/user/9999</code>
                    </div>
                </div>
            </div>
            
            <!-- User preferences -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">User Preferences</h5>
                    </div>
                    <div class="card-body">
                        <% if (profile.preferences && Object.keys(profile.preferences).length > 0) { %>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Setting</th>
                                        <th>Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (profile.preferences.display_name) { %>
                                        <tr>
                                            <td>Display Name</td>
                                            <td><%= profile.preferences.display_name %></td>
                                        </tr>
                                    <% } %>
                                    <% if (profile.preferences.bio) { %>
                                        <tr>
                                            <td>Bio</td>
                                            <td><%= profile.preferences.bio %></td>
                                        </tr>
                                    <% } %>
                                    <% if (profile.preferences.theme) { %>
                                        <tr>
                                            <td>Theme</td>
                                            <td><%= profile.preferences.theme %></td>
                                        </tr>
                                    <% } %>
                                    <% if (profile.preferences.favorite_category) { %>
                                        <tr>
                                            <td>Favorite Category</td>
                                            <td><%= profile.preferences.favorite_category %></td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <div class="alert alert-info">
                                No preferences have been set for this user.
                            </div>
                        <% } %>
                    </div>
                </div>
                
                <!-- Recent Activity -->
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Recent Activity</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-secondary">
                            <p>This user's activity would be displayed here.</p>
                            <p class="mb-0 text-muted">Activity data is not implemented in this demo.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 