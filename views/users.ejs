<%- include('partials/navbar') %>
<%- include('partials/header') %>

<div class="container mt-5">
    <h2>Users Directory</h2>
    <p class="lead">Browse all registered users in the system</p>
    
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Registered Users</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Join Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% if (typeof users !== 'undefined' && users && users.length > 0) { %>
                        <% users.forEach(function(user) { %>
                            <tr>
                                <td><%= user.id %></td>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td><%= user.role || 'user' %></td>
                                <td><%= new Date(user.created_at).toLocaleDateString() %></td>
                                <td>
                                    <a href="/user/<%= user.id %>" class="btn btn-sm btn-info">View</a>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center">No users found.</td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="alert alert-warning mt-4">
        <h5><i class="bi bi-exclamation-triangle"></i> Vulnerability Alert</h5>
        <p>This page is vulnerable to Insecure Direct Object References (IDOR). Try accessing user profiles you shouldn't have access to.</p>
    </div>
</div>

<%- include('partials/footer') %> 